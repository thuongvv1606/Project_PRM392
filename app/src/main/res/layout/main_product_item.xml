<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="184dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/choose_image" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Product name"
            android:textColor="@color/home_green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Product price (VND)"
            android:textColor="@color/link_blue"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:layout_weight="1"
                    android:backgroundTint="@color/dark_green"
                    />

                <Button
                    android:id="@+id/btn_product_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:layout_weight="1"
                    android:backgroundTint="@color/navbar_green"
                    />

        </LinearLayout>

</LinearLayout>