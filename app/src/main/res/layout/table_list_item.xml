<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/table_img" />
    <TextView
        android:id="@+id/tv_table_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table 1"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/tv_table_item_num_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of seat: "
        android:gravity="center_horizontal"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv_table_item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:gravity="center_horizontal"
        android:textSize="20dp" />
    <Button
        android:id="@+id/table_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Detail"/>
</LinearLayout>