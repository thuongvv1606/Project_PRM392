<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_stt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="1"
        android:textColor="@color/link_blue"
        />

    <TextView
        android:id="@+id/tv_product_name_inOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="3"
        />
    <TextView
        android:id="@+id/tv_price_view_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="2"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_plus_product"
            android:layout_width="39.5dp"
            android:layout_height="39.5dp"
            android:scaleType="centerInside"
            android:backgroundTint="@color/light_green"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="20dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_minus_product"
            android:layout_width="39.5dp"
            android:layout_height="39.5dp"
            android:scaleType="centerInside"
            android:backgroundTint="@color/light_green"
            android:text="+"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>